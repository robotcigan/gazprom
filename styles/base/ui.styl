.btn
  background $primary
  border 0
  border-radius $radius
  color #fff
  cursor pointer
  display inline-block
  font-family $font
  font-size 1.4rem
  font-weight 600
  flex-shrink 0
  line-height 1
  height 6rem
  padding 2.2rem 3.5rem
  text-decoration none
  text-transform uppercase
  transition all .4s
  &__icon
    line-height 1 !important
    margin-bottom 0 !important
    .fa
      font-weight 600
      line-height 1
      margin 0
  span + &__icon
    margin-left 2rem
  &__icon + span
    margin-left 2rem
  &:hover
    background-color $primary - 15%
  &--solid
    background-color transparent
    color $primary
    border 2px solid $primary
    &:hover
      border-color $primary - 15%
      color #fff
  &--transparent
    background-color transparent
    color $primary
    padding 2.2rem 1.5rem
    // transform translateX(-1.5rem)
    &:hover
      background-color rgba($primary, .08)
    .btn__icon + span
      margin-left 1rem
  &--full-size
    padding 2.2rem 3rem
    text-align center
    width 100%
  &--white
    border 1px solid #fff
    color #fff
    margin-bottom 2rem
  & + .pagination
    margin-left (40 / 750 * 100)%
  

.flatpickr
  &-month
    margin-bottom 1rem
  &-calendar
    padding 1.5rem 0
    &.arrowTop,
    &.arrowBottom
      &:before,
      &:after
        display none !important

.form
  margin-bottom 4rem

.form-control
  min-height 5rem
  margin-bottom 1.6 rem
  position relative
  &__icon
    color $gray
    font-size 3.2rem
    position absolute
    right 2rem
    top .2rem
    .fa
      transition all .2s
    &--active
      .fa
        transform rotate(180deg)
  label
    color $gray
    cursor text
    left 3rem
    position absolute
    pointer-events none
    top 20px
    transition all .2s
    max-width 100%
    &.form-control__label--active
      font-size 1.2rem
      top 14px
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="tel"],
  input[type="number"],
  select,
  textarea,
  .select2-selection--single
    background #fff
    border $border
    border-radius 4px
    display block
    font-size 1.6rem
    min-height 6rem
    transition border-color .2s
    padding 2.8rem 2rem 1.2rem 3rem
    position relative
    resize vertical
    width 100%
    -webkit-appearance none
    &:focus
      border-color $primary
      box-shadow 0 0 0 1px $primary
      & + label
        font-size 1.2rem
        top 14px
  textarea
    height 100%
    min-height 22rem
  .select2-container--open + .form-control__icon
      transform rotate(180deg)
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    select,
    textarea,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-control__icon
      color $error

.custom-select
  &--type-2
    font-size 3.8rem !important
    padding 1rem 3rem !important
    padding-right 6rem !important
    & + .form-control__icon
      top .5rem

.checkbox
  cursor pointer
  display block
  margin-bottom 1rem
  user-select none
  &__label
    background transparent
    border-radius $radius
    border 1px solid $light-gray - 10%
    cursor pointer
    circle(2.4rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    z-index 1
    &:after
      color #fff
      content "\f00c"
      display none
      font-family 'FontAwesome'
      font-size 1.5rem
      left 4px
      position absolute
      top 2px
      z-index 10
  input
    display none
  input:checked + .checkbox__label
    background-color $primary
    border-color $primary
    &:after
      display block
  label
    color $main
    display inline-block
    cursor pointer
    vertical-align middle

.radio
  cursor pointer
  display block
  margin-bottom 1rem
  user-select none
  &__label
    background transparent
    border-radius 50%
    border 1px solid $light-gray - 10%
    cursor pointer
    circle(2.4rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    z-index 1
    &:after
      background-color $primary
      border-radius 50%
      circle(1.4rem)
      color #fff
      content ''
      display none
      font-size 1.5rem
      left 4px
      position absolute
      top 4px
      z-index 10
  input
    display none
  input:checked + .radio__label
    background-color #fff
    border-color $primary
    box-shadow 0 0 0 1px $primary
    &:after
      display block
  label
    color $main
    display inline-block
    cursor pointer
    vertical-align middle
