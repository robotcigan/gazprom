.table
  border-collapse collapse
  font-size 1.4rem
  font-weight 300
  max-width 100%
  margin-bottom 2rem
  margin-top 2rem
  width 100%
  thead
    background $primary + 95%
    text-align left
    th
      color $primary
      font-weight 300
  th,
  td
    line-height $line-height
    padding 1.2rem 1.5rem
    padding-right 1rem
    margin 0
    &:first-child
      min-width 7rem
  tr:nth-child(even)
    background $primary + 95%
  tfoot
    td
      border none
      font-weight 600
  
  &--type-2
    border-bottom $border
    thead
      border-bottom $border
    th,
    td
      &:not(:first-child):not(:last-child)
        border-left $border
        border-right $border
    tr:nth-child(even)
      background initial
    tr:nth-child(odd)
      background $primary + 95%
