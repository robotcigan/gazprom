.btn
  background $primary
  border 0
  border-radius $radius
  color #fff
  cursor pointer
  display inline-block
  font-family $font
  font-size 1.4rem
  font-weight 500
  line-height 1
  padding 2rem 3.5rem
  text-decoration none
  text-transform uppercase
  transition all .4s
  &:hover
    background-color $primary - 15%