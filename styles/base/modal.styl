.modal
  animation bigFadeUp .3s forwards ease
  background #fff
  box-shadow 0 1rem 2rem rgba($main, .1)
  border-radius $radius 0 $radius $radius
  display none
  overflow-X hidden
  margin 10rem auto
  padding 4rem 6rem
  position relative
  width 94rem
  &--small
    padding 3rem 4rem
    text-align center
    width 40rem
    p
      font-size 1.8rem
      margin 0
    .mfp-close
      display none

.mfp-ready
  .modal
    display block

.mfp-close-btn-in .mfp-close,
.mfp-close-btn-in .mfp-close:active
  background-color $primary
  color #fff
  font-size 4rem
  opacity 1
  top 0
  right 0

.mfp-close
  circle(6rem)

@media(max-width 767px)
  .mfp-container
    padding 0
  .modal
    padding 6rem 6%
    right 0
    width 94%
  .mfp-close,
  .mfp-close:active
    font-size 4rem
    opacity 1
    top 1rem
    right -.5rem