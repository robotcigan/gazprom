.mobile-header
  background-color $primary
  display none
  height 9rem
  margin-bottom 0
  position relative
  padding 1rem 0
  transition transform .4s ease
  width 100%
  .logo
    background url('../../img/logo-white.png') no-repeat
    // background-size contain
    height 6rem
    width 11rem

.mobile-menu-toggle
  cursor pointer
  display none
  position absolute
  right 3rem
  top 4rem
  size(12px, 15px)
  transition transform .4s ease
  &:before
    // background-color rgba(#fff, .97)
    content ''
    left -2.4rem
    position absolute
    top -3rem
    circle(8rem)
  span
    // background-color $primary
    background-color #fff
    display block
    height 2px
    position absolute
    top 0
    transition all .3s
    width 3rem
    &:nth-child(2)
      top 8px
    &:nth-child(3)
      top 16px
  &--active
    span
      &:nth-child(1)
        transform rotate(45deg)
        top 5px
      &:nth-child(2)
        opacity 0
      &:nth-child(3)
        transform rotate(-45deg)
        top 5px

@media(max-width 1140px)
  // body
  //   overflow-X hidden
  .grid--container
    max-width 96%

@media(max-width 1024px)
  .main-header
    display none
  .mobile-header
    display block
  .mobile-menu-toggle
    display block
  .navigation
    display none


@media(max-width 500px)
  .mobile-header
     &--active
       transform translateX(-32rem)
      .mobile-menu-toggle
        transform none
  .hero
    &__img
      background-position 60%
    &__container
      transform translateY(4rem)

