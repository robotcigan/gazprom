extends layout.pug

block content
  .hero
    .hero__slider
      - for(var i = 0; i < 3; i++)
        .hero__slide
          .hero__img(style="background-image: url(img/main-slide.jpg)")
            .grid.grid--container
              .hero__container
                .hero__title Газификация регионов
                  br
                  | Российской Федерации 
                .btn.btn--primary Узнать подробнее

  .navigation
    .navigation__container.grid.grid--container
      a(href="").navigation__link Физическим лицам
      a(href="").navigation__link Юридическим лицам
      a(href="").navigation__link Личный кабинет
      .navigation__search.search
        .search__icon
          i.fa.fa-search

  .gray-block
    .grid.grid--container
      .row
        .col.col--xl-5
          .row.row--no-gutters.actions
            .col.col--xl-6.col--md-4.col--sm-6.col--no-gutters
              a(href="").action
                .action__container
                  .action__img
                    img(src="./img/counter.png", alt="")
                  .action__name Сообщить показания счетчика
            .col.col--xl-6.col--md-4.col--sm-6.col--no-gutters
              a(href="").action
                .action__container
                  .action__img
                    img(src="./img/card.png", alt="")
                  .action__name Оформить электронную квитанцию
            .col.col--xl-6.col--md-4.col--sm-6.col--no-gutters
              a(href="").action
                .action__container
                  .action__img
                    img(src="./img/money.png", alt="")
                  .action__name Платежные сервисы
            .col.col--xl-6.col--md-4.col--sm-6.col--no-gutters
              a(href="").action
                .action__container
                  .action__img
                    img(src="./img/question.png", alt="")
                  .action__name Вопрос-ответ
            .col.col--xl-6.col--md-4.col--sm-6.col--no-gutters
              a(href="").action.action--last
                .action__container
                  .action__img
                    img(src="./img/map.png", alt="")
                  .action__name Участки
            .col.col--xl-6.col--md-4.col--sm-6.col--no-gutters
              a(href="").action.action--last
                .action__container
                  .action__img
                    img(src="./img/info.png", alt="")
                  .action__name Информация
        .col.col--xl-7
          .news
            h2.h2 Новости
            .news__list
              .news__item.item
                .item__container
                  .date
                    .date__number 31
                    .date__month марта
                  a(href="").item__title Динамика роста просроченной задолженности российских потребителей за газ снижается
              .news__item.item
                .item__img(style="background-image: url(img/slide3.jpg)")
                .item__container
                  .date
                    .date__number 31
                    .date__month марта
                  a(href="").item__title Газпром поставил рекордное количество газа в Европу
              -for(var i = 0; i < 5; i++)
                .news__item.item
                  .item__container
                    .date
                      .date__number 31
                      .date__month марта
                    a(href="").item__title Динамика роста просроченной задолженности российских потребителей за газ снижается

  .actual
    .grid.grid--container
      h2.h2 Актуально
      .actual-slider
        .slider
          .slide
            .slide__img
              img(src="img/slider-b1.jpg", alt="")
          .slide
            .slide__img
              img(src="img/slider-b2.jpg", alt="")
          .slide
            .slide__img
              img(src="img/slider-b3.jpg", alt="")
          .slide
            .slide__img
              img(src="img/slider-b4.jpg", alt="")
          .slide
            .slide__img
              img(src="img/slider-b4.jpg", alt="")











