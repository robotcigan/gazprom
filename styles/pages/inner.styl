.breadcrumbs
  border-bottom $border
  margin-bottom 6rem
  padding 1.5rem 0
  &__link
    color $gray
    font-size 1.4rem
    position relative
    line-height 1
    margin-right 3.2rem
    text-decoration none
    text-transform uppercase
    &:after
      content '\f105'
      font-family FontAwesome
      position absolute
      right -1.6rem
      top 1px
    &--active
      font-weight 500
      &:after
        display none
    &:hover
      color $primary
      &:after
        color $gray

.inner
  margin-bottom 10rem
  &__img
    display block
    margin-bottom 4rem
    img
      display block
      max-width 100%
    &--full
      margin-bottom 1rem
      img
        width 100%
    &--center
      text-align center
      img
        display inline-block
  &__header
    display flex
    justify-content space-between
  &__header--type-2
    justify-content initial
    .h1
      margin-right 2rem
    .form-control
      min-width 15rem

.sidebar
  border $border
  border-radius $radius
  margin-bottom 4rem
  padding 0
  & > li:last-child
    .sidebar__link
      border-bottom none
  &__link
    border-bottom $border
    color $main
    display block
    font-size 1.4rem
    line-height $line-height
    padding 1.2rem 0
    padding-left 2rem
    padding-right 2rem
    text-decoration none
    &:hover
      color $primary
    &--active
      background-color #f1f5f8
      color $primary
      &:hover
        color $primary
  ul
    list-style-type none
    margin 0
    padding 0
    .sidebar__link
      padding-left 4rem
    ul
      .sidebar__link
        padding-left 6rem
  & + .btn
    margin-bottom 4rem

.tab-links
  font-size 0
  margin-bottom 4rem
  .item
    border-bottom 2px solid $light-gray
    display inline-block
    padding 0 1.2rem
    transition border-color .2s
    img
      margin-bottom .8rem
    &:hover:not(.item--active)
      border-color rgba($primary, .3)
    &--active
      border-color $primary

.svg-map
  margin-bottom 2rem
  svg
    height 50rem
    width 100%
    
.alphabet
  display flex
  justify-content space-between
  margin-bottom 4rem
  &__link
    color $main
    font-size 2.2rem
    text-decoration none
    &:hover
      color $primary

.inner-text-slider-container
  padding 0 2.5rem

.inner-text-slider
  margin-bottom 6rem
  position relative
  &:before,
  &:after
    // background linear-gradient(to left, red, rgba(#fff, 0))
    background url('../../img/white-shadow.png')
    content ''
    position absolute
    size(2rem, 3rem)
    top 0
    z-index 50
  &:before
    left -1.5rem
    transform rotate(180deg)
  &:after
    right -1.5rem
  .slick-slide
    text-align center
  &__link
    color $main
    display inline-block
    border-bottom 1px solid rgba($main, .2)
    margin-right 4rem
    text-decoration none
    &--active,
    &:hover
      color $primary
      border-color rgba($primary, .2)
  .slick-list
    padding-left 2rem


.file
  align-items flex-start
  display flex
  margin-bottom 3rem
  &__icon
    margin-right 2rem
    transform translateY(.8rem)
  &__name
    color $primary
    border-bottom 1px solid rgba($primary, .2)
    display inline
    font-weight 300
    line-height $line-height
    text-decoration none
  &__size
    color $gray
    font-weight 300
    margin-top 1rem

.team-list
  .team
    display flex
    margin-bottom 4rem
    &__img
      img
        display block
    &__container
      margin-left 3rem
      padding-top 2rem
    &__name
      color $primary
      font-size 2.2rem
      margin-bottom 2rem
    &__role
      font-weight 300
      line-height $line-height

.link-block
  margin-bottom 3.5rem
  &__link
    color $main
    display inline-block
    font-style 1.8rem
    font-weight 500
    padding 2rem
    text-decoration none
    &--active
      background-color $light-gray

.well
  background-color $light-gray
  border-radius $radius
  padding 4rem 0
  text-align center
  p
    margin 0
    margin-bottom 3rem

.services
  .service
    align-items center
    border $border
    display flex
    justify-content center
    height 9rem
    margin-bottom 2rem
    text-decoration none

.accordion
  &:last-child
    .accordion
      &__header
        border-bottom $border
  &__header
    border-top $border
    cursor pointer
    font-size 2.2rem
    line-height 1.6
    padding 2.5rem 0
    padding-right 4rem
    position relative
    &:hover
      .accordion
        &__arrow
          border-color $primary
          .fa
            color $primary
  &__arrow
    border $border
    border-radius 50%
    circle(4rem)
    cursor pointer
    display inline-block
    position absolute
    top 2rem
    text-align center
    transition border-color .4s, transform .2s
    right 0
    .fa
      color $gray
      display inline-block
      font-size 2.2rem
      transition all .4s
    &--active
      .fa
        transform rotate(180deg) translateY(1px)
  &__body
    display none
    margin-top 3rem
    padding-right 4rem
  &--small-header
    .accordion
      &__header
        font-size 1.8rem

.pagination
  display inline-block
  vertical-align top
  &__link
    color $main
    display inline-block
    font-weight 500
    margin-right 1rem
    padding-top 2rem
    size(6rem, 4rem)
    text-align center
    text-decoration none
    &:hover
      background-color rgba($light-gray, .2)
    &--active
      background-color $light-gray

.aside-block
  margin-top 9rem

.special-link
  display block
  margin-bottom 4rem
  &__link
    link-type-2()
    font-weight 300
    margin-right 1rem
  &__icon
    background url('../../img/special-link-icon.png') no-repeat
    background-size 100%
    circle(17px)
    display inline-block
    vertical-align middle

span
  .special-link
    display inline-block

.video
  margin-bottom 6rem
  iframe
    height 48rem
    width 100%

.star
  color #ff0713

@media(max-width 767px)
  .sidebar
    margin-bottom 6rem

@media(max-width 701px)
  .btn + .pagination
    display block
    margin-left 0
    margin-top 2rem

@media(max-width 500px)
  .team-list
    .team
      flex-direction column
      &__container
        margin 0
  .inner__header
    flex-direction column
    .btn
      text-align center
  .news
    .new
      display block


