.h1,
.h2,
.h3,
.p,
p
  margin 0
  margin-bottom 1rem

.h1
  font-size 3.8rem
  font-weight 400
  line-height 1.4
  margin-bottom 4rem

.h2
  font-size 2.8rem
  font-weight 500
  line-height 1
  margin-bottom 3.5rem

.h3
  font-size 2.2rem
  font-weight 400
  line-height (36 / 22)
  margin-bottom 3.5rem

.inner__block
  p
    font-weight 300
    line-height 1.875
    margin-bottom 3rem
  strong
    display inline-block
    font-size 1.6rem
    font-weight 400
    margin-bottom .5rem
  i
    font-weight 300
    line-height 1.875
    margin-bottom 3rem
  ol,
  ul
    font-weight 300
    line-height $line-height
    padding-left 2rem
    li
      color $primary
      margin-bottom 3rem
      span,
      p,
      strong,
      i
        color $main
      span
        display block
        margin-bottom 2rem
    ul
      list-style-type disc

.ul-offset
  padding-left 6rem !important

.text-primary
  color $primary

.text-info
  color $primary
  padding-left 3rem
  position relative
  &:before
    background url('../../img/attention.png') no-repeat
    circle(2rem)
    content ''
    left 0
    position absolute
    top .5rem
