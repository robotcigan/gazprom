.table
  border-collapse collapse
  font-size 1.4rem
  font-weight 300
  max-width 100%
  margin-bottom 2rem
  margin-top 2rem
  width 100%
  thead
    background rgba($primary, .05)
    text-align left
    th
      color $primary
      font-weight 300
  th,
  td
    line-height $line-height
    padding 1.2rem 1.5rem
    padding-right 1rem
    margin 0
    &:first-child
      min-width 7rem
  tr:nth-child(even)
    background rgba($primary, .05)
  tfoot
    td
      border none
      font-weight 600
