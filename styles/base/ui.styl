.btn
  background $primary
  border 0
  border-radius $radius
  color #fff
  cursor pointer
  display inline-block
  font-family $font
  font-size 1.4rem
  font-weight 600
  flex-shrink 0
  line-height 1
  height 6rem
  padding 2.2rem 3.5rem
  text-decoration none
  text-transform uppercase
  transition all .4s
  &__icon
    line-height 1 !important
    margin-bottom 0 !important
    .fa
      font-weight 600
      line-height 1
      margin 0
  span + &__icon
    margin-left 2rem
  &__icon + span
    margin-left 2rem
  &:hover
    background-color $primary - 15%
  &--full-size
    padding 2.2rem 3rem
    text-align center
    width 100%
  & + .pagination
    margin-left (40 / 750 * 100)%
  

.flatpickr
  &-month
    margin-bottom 1rem
  &-calendar
    padding 1.5rem 0
    &.arrowTop,
    &.arrowBottom
      &:before,
      &:after
        display none !important

.form
  margin-bottom 4rem

.form-control
  min-height 5rem
  margin-bottom 1.6 rem
  position relative
  &__icon
    color $gray
    font-size 3.2rem
    position absolute
    right 2rem
    top .2rem
    .fa
      transition all .2s
    &--active
      .fa
        transform rotate(180deg)
  label
    color $gray
    cursor text
    left 3rem
    position absolute
    pointer-events none
    top 20px
    transition all .2s
    max-width 100%
    &.form-control__label--active
      font-size 1.2rem
      top 14px
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="tel"],
  input[type="number"],
  select,
  textarea,
  .select2-selection--single
    background #fff
    border $border
    border-radius 4px
    display block
    font-size 1.6rem
    transition border-color .2s
    padding 2.8rem 2rem 1.2rem 3rem
    position relative
    resize vertical
    width 100%
    -webkit-appearance none
    &:focus
      border-color $primary
      & + label
        font-size 1.2rem
        top 14px
  textarea
    height 100%
    min-height 22rem
  .select2-container--open + .form-control__icon
      transform rotate(180deg)
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    select,
    textarea,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-control__icon
      color $error