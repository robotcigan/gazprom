.h1,
.h2,
.h3,
.p,
p
  margin 0
  margin-bottom 1rem

.h1
  font-size 3.8rem
  font-weight 400
  line-height 1.4
  margin-bottom 4rem

.h2
  font-size 2.8rem
  font-weight 500
  line-height 1
  margin-bottom 3.5rem

.h3
  font-size 2.2rem
  font-weight 400
  line-height (36 / 22)
  margin-bottom 3.5rem

.h4
  display inline-block
  font-size 1.8rem
  font-weight 500
  line-height (18 / 30)
  margin-bottom 1.8rem
  margin-top 0

.inner__block
  p
    font-weight 300
    line-height 1.875
    margin-bottom 3rem
  date
    color $gray
    font-weight 300
    display inline-block
    line-height $line-height
    margin-bottom 3rem
  strong
    display inline-block
    font-size 1.6rem
    font-weight 400
    margin-bottom .5rem
  i
    display inline-block
    font-weight 300
    line-height 1.875
    margin-bottom 3rem
  ol,
  ul
    font-weight 300
    line-height $line-height
    padding-left 2rem
    li
      color $primary
      margin-bottom 2rem
      span,
      p,
      strong,
      i
        color $main
      span
        display block
        margin-bottom 2rem
    ul
      list-style-type disc
  blockquote
    color $primary
    display block
    font-weight 300
    line-height $line-height
    margin-bottom 4rem
    margin-left 0
    padding-left 3.5rem
    position relative
    &:before
      background-color $primary
      content ''
      height 100%
      left 0
      position absolute
      top 0
      width 2px

.ul-offset
  padding-left 6rem !important

.list-item
  line-height $line-height
  margin-bottom 5rem
  padding-left 3.5rem
  position relative
  &:before
    background-color $main
    content ''
    left 0
    height 2px
    position absolute
    top 1.5rem
    width 1.6rem
  &--primary
    &:before
      background-color $primary

.text-primary
  color $primary

.text-info
  color $primary
  padding-left 3rem
  position relative
  &:before
    background url('../../img/attention.png') no-repeat
    circle(2rem)
    content ''
    left 0
    position absolute
    top .5rem
